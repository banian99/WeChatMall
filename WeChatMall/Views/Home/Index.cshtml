                document.getElementById("Zui_xing").style.display = "none";
                document.getElementById("btn_one").className = "";
                document.getElementById("btn_two").className = "on";
                document.getElementById("btn_tress").className = "";
            }
            document.getElementById("btn_tress").onclick = function () {
                document.getElementById("Re_xiao").style.display = "none";
                document.getElementById("Tui_jian").style.display = "none";
                document.getElementById("Zui_xing").style.display = "block";
                document.getElementById("btn_one").className = "";
                document.getElementById("btn_two").className = "";
                document.getElementById("btn_tress").className = "on";
            }

        })
    </script>

